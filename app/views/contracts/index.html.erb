<%= page_header do %>
  <h1>Договора</h1>
<% end %>

<%= search_form_for @q, class: 'form-inline m-b-2' do |f| %>
  <div class="form-group">
    <%= f.search_field :id_eq, class: 'form-control', placeholder: 'id', style: 'width: 3rem' %>
  </div>
  <div class="form-group">
    <%= f.search_field :title_cont, class: 'form-control', placeholder: 'Название содержит', style: 'width: 12rem' %>
  </div>
  <div class="form-group">
    <%= f.collection_select :renter_id_eq, Renter.all, :id, :to_label, {include_blank: true}, {class: 'custom-select', style: 'width: 12rem'} %>
  </div>
  <div class="form-group">
    <%= f.collection_select :area_id_eq, Area.all, :id, :to_label, {include_blank: true}, {class: 'custom-select', style: 'width: 12rem'} %>
  </div>
  <div class="form-group">
    <%= f.submit "Искать", class: 'btn btn-outline-primary' %>
  </div>
<% end %>

<table class="table">
  <thead class="thead-inverse">
    <tr>
      <th>id</th>
      <th>Название</th>
      <th>Арендатор</th>
      <th>Площадь</th>
      <th>Ставка в день</th>
      <th>Дата начала</th>
      <th>Дата окончания</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @contracts.each do |contract| %>
      <% css_class = 'table-active' if contract.date_start <= Date.today && contract.date_end >= Date.today %>
      <tr class="<%= css_class %>">
        <td><%= contract.id %></td>
        <td><%= link_to contract.title, contract_path(contract) %></td>
        <td>
          <%= link_to renter_path(contract.renter) do %>
            <%= contract.renter.to_label %>
          <% end %>
        </td>
        <td>
          <%= link_to area_path(contract.area) do %>
            <%= contract.area.to_label %>
            <br />
            <%= image_tag contract.area.spotted_map, style: 'width: 200px' %>
          <% end %>
        </td>
        <td><%= contract.rate %></td>
        <td><%= l contract.date_start %></td>
        <td><%= l contract.date_end %></td>
        <td>
          <%= link_to edit_contract_path(contract), class: 'e-control-links' do %>
            <%= icon('edit m-r-1') %>Редактировать
          <% end %>
          <br />
          <%= link_to contract, method: :delete, data: { confirm: 'Действительно хотите удалить договор?' }, class: 'e-control-links' do %>
            <%= icon('remove m-r-1') %>Удалить
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Новый договор', new_contract_path %>
