<div class="row">
  <div class="col-md-8">
    <%= simple_form_for(@area, wrapper: :horizontal_form) do |f| %>
      <%= f.error_notification %>

      <div class="form-inputs">
        <%= f.association :map %>
        <%= f.input :ref %>
        <%= f.input :title %>
        <%= f.input :square %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, class: 'btn-primary m-y-2' %>
      </div>
    <% end %>
  </div>
</div>
